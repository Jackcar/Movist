<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="BaseEditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/whiteAlpha</item>
        <item name="backgroundTint">#c5c5c5</item>
        <item name="fontPath">fonts/Montserrat-Light.ttf</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="LightFont">
        <item name="fontPath">fonts/Montserrat-Light.ttf</item>
    </style>

    <style name="RegularFont" parent="android:Widget.TextView">
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
    </style>

    <style name="MediumFont" parent="android:Widget.TextView">
        <item name="fontPath">fonts/Montserrat-Medium.ttf</item>
    </style>

    <style name="BoldFont" parent="android:Widget.TextView">
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
    </style>

    <style name="SemiBoldFont" parent="android:Widget.TextView">
        <item name="fontPath">fonts/Montserrat-SemiBold.ttf</item>
    </style>
</resources>
