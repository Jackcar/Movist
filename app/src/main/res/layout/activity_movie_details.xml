<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/movieCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transitionName="moviePoster" />

            <ImageView
                android:id="@+id/viewMask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_background"
                app:layout_constraintBottom_toBottomOf="@+id/movieCover" />

            <ImageView
                android:layout_width="@dimen/movie_details_ic_play"
                android:layout_height="@dimen/movie_details_ic_play"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:alpha="0.7"
                android:src="@drawable/ic_play"
                android:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@+id/movieCover"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/moviePoster"
                android:layout_width="@dimen/movie_details_poster_width"
                android:layout_height="@dimen/movie_details_poster_height"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/movie_details_poster_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movieTitle"
                style="@style/BoldFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="@dimen/movie_details_title_padding"
                android:textAllCaps="true"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:transitionName="movieTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/moviePoster"
                app:layout_constraintTop_toBottomOf="@+id/view"
                tools:text="Transformers" />

            <TextView
                android:id="@+id/movieYear"
                style="@style/RegularFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:paddingLeft="@dimen/movie_details_title_padding"
                android:textColor="@color/mediumGray"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/moviePoster"
                app:layout_constraintTop_toBottomOf="@+id/movieTitle"
                tools:text="2017" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="@dimen/movie_item_rating"
                android:layout_height="@dimen/movie_item_rating"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieTitle">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/movieRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:shadowColor="@color/mediumGray"
                        android:shadowRadius="10.0"
                        android:textColor="@color/mediumGray"
                        android:textSize="@dimen/text_size_large"
                        tools:text="7.5" />

                    <ImageView
                        android:layout_width="@dimen/movie_item_star_rating"
                        android:layout_height="@dimen/movie_item_star_rating"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/ic_star"
                        android:tint="@color/mediumGray" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/overviewTitle"
                style="@style/BoldFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:padding="@dimen/movie_details_title_padding"
                android:text="@string/movie_details_overview"
                android:textAllCaps="true"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/moviePoster" />

            <TextView
                android:id="@+id/movieOverview"
                style="@style/RegularFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:paddingLeft="@dimen/movie_details_title_padding"
                android:paddingRight="@dimen/movie_details_title_padding"
                android:text="@string/movie_details_overview"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/overviewTitle" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" />
</RelativeLayout>