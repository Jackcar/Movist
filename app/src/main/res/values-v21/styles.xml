<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="LightFont">
        <item name="fontPath">fonts/Montserrat-Light.ttf</item>
    </style>

    <style name="RegularFont">
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
    </style>

    <style name="MediumFont">
        <item name="fontPath">fonts/Montserrat-Medium.ttf</item>
    </style>

    <style name="BoldFont">
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
    </style>

    <style name="SemiBoldFont">
        <item name="fontPath">fonts/Montserrat-SemiBold.ttf</item>
    </style>
</resources>
